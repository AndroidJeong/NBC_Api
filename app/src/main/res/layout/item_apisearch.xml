<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:padding="10dp"
    >


    <ImageView
        android:id="@+id/item_thumnail"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/item_like"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:src="@drawable/like_filled"
        android:visibility="gone"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="@+id/item_thumnail"
        app:layout_constraintTop_toTopOf="@+id/item_thumnail"
         />

    <TextView
        android:id="@+id/item_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="다음 카페"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_thumnail" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:text="yyyy-MM-dd HH:mm:ss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_source" />

</androidx.constraintlayout.widget.ConstraintLayout>